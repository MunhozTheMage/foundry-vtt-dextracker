<div class="creature-edit-template flex flex-column">
  <h1>Edit {{creature.name}}</h1>

  <div class="flex flex-column flex-space" style="height: 100%;">
    <div class="flex flex-column">
      <label for="user-creature-status">Status</label>
      <select id="user-creature-status">
        <option value="not-seen">Not Seen</option>
        <option value="seen">Seen</option>
        <option value="caught">Caught</option>
      </select>
    </div>

    <button id="save-creature-edit">Confirmar</button>
  </div>
</div>